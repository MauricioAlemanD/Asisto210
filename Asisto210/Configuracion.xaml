                 CornerRadius="0" 
                 Margin="1" 
                 Background="White" 
                 BorderBrush="Black"
                 BorderThickness="0,0,1,0" />
                <Path 
                 x:Name="Arrow"
                 Grid.Column="1"     
                 Fill="White"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
